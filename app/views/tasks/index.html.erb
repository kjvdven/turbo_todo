<main class="space-y-6">
  <header>
    <div class="flex justify-between items-center">
      <h1 class="font-serif text-2xl font-bold">Tasks</h1>
      <%= link_to "New task", new_task_path, data: { turbo_frame: dom_id(Task.new) }, class: "btn btn--primary" %>
    </div>
  </header>
  <section>
    <%= turbo_frame_tag Task.new %>
  </section>
  <section>
    <div  class="space-y-4">
      <h2 class="font-serif text-xl font-bold text-gray-700">Open Tasks</h2>
      <%= turbo_stream_from "tasks" %>
      <%= turbo_frame_tag "in_progress_tasks" do %>
        <%= render @tasks %>
      <% end %>
    </div>
  </section>
  <section class="space-y-4">
    <h2 class="font-serif text-xl font-bold text-gray-700">Completed Tasks</h2>
    <%= turbo_frame_tag "completed_tasks" do %>
      <%= render @completed_tasks %>
    <% end %>
  </section>
</main>
