<div class="space-y-6">
  <h1 class="font-serif text-2xl font-bold">Tasks</h1>
  <%= turbo_frame_tag "new_tasks" do %>
    <%= link_to "New task", new_task_path %>
  <% end %>
  <div class="space-y-4">
    <h2 class="font-serif text-xl font-bold text-gray-700">Open Tasks</h2>
    <%= turbo_stream_from "tasks" %>
    <%= render @tasks %>
  </div>
  <div class="space-y-4">
    <h2 class="font-serif text-xl font-bold text-gray-700">Completed Tasks</h2>
    <%= render @completed_tasks %>
  </div>
</div>
