<div class="space-y-1 group" id="<%= dom_id task %>">
  <div class="text-xs inline-flex rounded-full py-1 px-2 font-semibold text-gray-800/80 <%= task.status == 'completed' ? 'bg-green-200' : 'bg-gray-200' %>"><%= task.status %></div>
  <div class="group-hover:opacity-100 <%= "opacity-50" if task.completed?  %>">
    <h3 class="text-lg font-bold"><%= task.title %></h3>
    <p class="text-gray-500"><%= task.description %></p>
  </div>
</div>
